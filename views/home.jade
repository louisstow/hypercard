extends layout

block content
	div.header
		span
			a(href='/') Hypecard

	div.container
		div#preview.column
			h2 Preview
			div#preview-area
			
		div#edit.column
			h2 Edit
			label
				span Type:
				select#type
					option(value="none", selected) Select a type...
					optgroup(label="Container")
						option(value="stack") Stack
						option(value="grid") Grid
						option(value="list") List
					
					optgroup(label="Content")
						option(value="image") Image
						option(value="text") Text
						option(value="video") Video

			div#form

	script(src="/script.js")