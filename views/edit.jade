extends layout

block content
	div.error
		strong.message
		span.tip

	div.header
		span 
			a(href='/') Hypecard	

	div.container
		div#preview.column
			a.open(target='_blank', href='./') Open
			h2 Preview
				span.id

			div#preview-area !{content}

			
		div#edit.column
			h2 Edit
			label
				span Type:
				select#type
					option(value="none") Select a type...
					optgroup(label="Container")
						option(value="stack") Stack
						option(value="grid") Grid
						option(value="list") List
					
					optgroup(label="Content")
						option(value="image") Image
						option(value="text") Text
						option(value="video") Video

			div#form

	script(src="/script.js")